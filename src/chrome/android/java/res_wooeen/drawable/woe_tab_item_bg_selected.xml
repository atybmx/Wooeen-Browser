<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/woe_tab_item_selected_border"
                android:centerColor="@color/woe_tab_item_selected_border"
                android:endColor="@color/woe_transparent"
                android:angle="90"
                ></gradient>
        </shape>
    </item>
    <item android:top="10dp" android:right="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/woe_tab_item_selected_bg" />
            <corners android:topLeftRadius="25dp" android:topRightRadius="25dp"></corners>
        </shape>
    </item>
</layer-list>