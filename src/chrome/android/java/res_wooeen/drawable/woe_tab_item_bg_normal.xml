<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/woe_tab_item_border"
                android:centerColor="@color/woe_tab_item_border"
                android:endColor="@color/woe_transparent"
                android:angle="90"
                ></gradient>
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top="10dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/woe_tab_item_bg"/>
            <corners android:topLeftRadius="25dp" android:topRightRadius="25dp"></corners>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/woe_tab_item_border"
                android:centerColor="@color/woe_transparent"
                android:endColor="@color/woe_transparent"
                android:angle="450"
                ></gradient>
        </shape>
    </item>
</layer-list>