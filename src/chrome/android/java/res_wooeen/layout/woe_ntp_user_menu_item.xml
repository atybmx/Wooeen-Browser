<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/woe_menu_item_content"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical|start"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/woe_menu_item_bg"
    >

    <ImageView
        android:id="@+id/woe_menu_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        ></ImageView>

    <TextView
        android:id="@+id/woe_menu_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/woe_menu_item_font"
        android:textSize="16sp"
        android:padding="0dp"
        android:fontFamily="@font/poppins_semibold"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/woe_user_menu_item_next"
        ></ImageView>

</LinearLayout>
