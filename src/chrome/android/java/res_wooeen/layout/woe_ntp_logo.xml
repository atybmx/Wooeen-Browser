<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:id="@+id/woe_ntp_logo_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/woe_btn_main_div"
        android:elevation="1dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/woe_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/woe_radius"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/woe_ic_head_user"
            ></ImageView>

        <ImageView
            android:id="@+id/woe_company_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/woe_radius"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/woe_ic_head_company"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical|end"
            android:clickable="true">

            <LinearLayout
                android:id="@+id/panel_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom|end"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/txt_balance_header"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textColor="@color/woe_div_title"
                    android:textSize="43sp"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="-0.05"
                    ></TextView>

                <TextView
                    android:id="@+id/txt_balance_header_cents"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textColor="@color/woe_div_title"
                    android:textSize="21sp"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="-0.05"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/woe_cbd_progress"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:visibility="invisible" />

            <com.wooeen.view.ui.WoeButtonHead
                android:id="@+id/btn_cashback_header"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/woe_widget_cashback_btn_pref"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="10sp"
                android:textColor="@color/woe_ntp_logo_btn_text"
                android:textAllCaps="true"
                android:background="@drawable/woe_btn_header"
                ></com.wooeen.view.ui.WoeButtonHead>

            </LinearLayout>

            <com.wooeen.view.ui.WoeButtonOrange
                android:id="@+id/btn_activate_cashback"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minHeight="60dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="10sp"
                android:text="@string/woe_enable_cashback" />

        </LinearLayout>

    </LinearLayout><!-- END logo -->


</LinearLayout>
