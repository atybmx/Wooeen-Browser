<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:scrollbars="vertical"
    android:background="@color/woe_bg_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="start"
            android:layout_gravity="start"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/woe_rec_terms_title"
            android:textColor="@color/woe_color_purple"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/woe_rec_terms_text1"
            android:textColor="@color/woe_color_font"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/woe_rounded_bg"
                android:textColor="@color/woe_white"
                android:layout_marginEnd="15dp"
                android:text="@string/woe_one" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/woe_rec_terms_text2"
                android:textColor="@color/woe_color_font"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/woe_rounded_bg"
                android:textColor="@color/woe_white"
                android:layout_marginEnd="15dp"
                android:text="@string/woe_two" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/woe_rec_terms_text3"
                android:textColor="@color/woe_color_font"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/woe_rounded_bg"
                android:textColor="@color/woe_white"
                android:layout_marginEnd="15dp"
                android:text="@string/woe_tree" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/woe_rec_terms_text4"
                android:textColor="@color/woe_color_font"
                android:textSize="16sp" />

        </LinearLayout>

        <com.wooeen.view.ui.WoeButton
            android:id="@+id/btn_rec_terms_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:minHeight="60dp"
            android:text="@string/woe_rec_terms_btn_yes"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/woe_back"
            android:textAllCaps="true"
            android:textColor="@color/woe_color_font" />

    </LinearLayout>

</ScrollView>
