<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wooeen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Wooeen.Fullscreen" parent="Theme.Wooeen">
        <item name="android:actionBarStyle">@style/Widget.Theme.Wooeen.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.Wooeen.TextH1" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/woe_style_h1</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Theme.Wooeen.TextH2" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/woe_style_h2</item>
    </style>

    <style name="Theme.Wooeen.TextH3" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/woe_style_h3</item>
    </style>

    <style name="Theme.Wooeen.TextP" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/woe_color_font</item>
    </style>

    <style name="Theme.Wooeen.Hyperlink" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/woe_color_font</item>
    </style>

    <style name="Theme.Wooeen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Wooeen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Wooeen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>